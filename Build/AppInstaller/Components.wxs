      <Component Id="DatabaseFile" Guid="{B9E62D4C-3EFF-4CB2-BE0B-73AA13033F45}" Directory="LocalAppDataProductDatabaseFolder">
        <File Id="file55AFCC1189AB4A3AB4BAD5B" KeyPath="yes" Source="$(var.ProjectAvalonia.Desktop.ProjectDir)bin\Release\net7.0\win-$(var.Platform)\publish\GestorProjetosArpa.db"/>
