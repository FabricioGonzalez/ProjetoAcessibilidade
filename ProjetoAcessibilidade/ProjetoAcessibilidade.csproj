    </None>
    <None Update="Specifications\Tables\Portas de Emergência.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Specifications\Tables\Portas-de-Emergência.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Specifications\Tables\Sanitários Comuns.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Specifications\Tables\Sanitários-Comuns.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Specifications\Tables\Sánitario Acessível.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
