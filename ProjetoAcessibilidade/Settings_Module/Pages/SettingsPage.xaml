<Page
    x:Class="ProjetoAcessibilidade.Settings_Module.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource PageStyle}">
	<Grid x:Name="ContentArea">
		<SplitView IsPaneOpen="True"
                   OpenPaneLength="200"
                   DisplayMode="Inline"
                   PanePlacement="Left"
                   PaneBackground="{ThemeResource SettingsPane}">
			<SplitView.Pane>
				<ListView ItemsSource="{x:Bind ViewModel.Components,Mode=OneWay}"
                          SelectedIndex="{x:Bind ViewModel.SelectedItem,Mode=TwoWay}"
                          SelectionMode="Single" 
                          IsItemClickEnabled="True"
						  CornerRadius="0"
						  Translation="0,0,4"
						  Shadow="{ThemeResource ShadowElement}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name,Mode=OneWay}" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</SplitView.Pane>
		</SplitView>
	</Grid>
</Page>
