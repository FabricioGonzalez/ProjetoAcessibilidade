<UserControl
    x:Class="ProjectAvalonia.Project.Components.ProjectEditing.ItemsComponents.OptionsComponent"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appModelCheckBox="clr-namespace:App.Core.Entities.Solution.Project.AppItem.DataItems.Checkbox;assembly=App.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectAvalonia.Project.Components.ProjectEditing.ItemsComponents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ItemsControl Items="{Binding Options}">
        <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="appModelCheckBox:AppOptionModel">
                <local:OptionItemComponent IsChecked="{Binding IsChecked, Mode=TwoWay}" Value="{Binding Value}" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
