<UserControl
    x:Class="ProjectAvalonia.Project.Views.ProjectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editing="clr-namespace:ProjectAvalonia.Project.Components.ProjectEditing;assembly=ProjectAvalonia"
    xmlns:explorer="clr-namespace:ProjectAvalonia.Project.Components.ProjectExplorer;assembly=ProjectAvalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ProjectAvalonia.Views;assembly=ProjectAvalonia"
    xmlns:vm="clr-namespace:Project.Core.ViewModels.ViewModels;assembly=Project.Core"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="650"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid Margin="4" ColumnDefinitions="0.75*,0.25*">
        <editing:EditingView
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="Transparent" />
        <explorer:ExplorerComponent
            Grid.Column="1"
            Margin="4"
            VerticalAlignment="Stretch"
            Background="Transparent"
            CornerRadius="8" />
    </Grid>
</UserControl>
