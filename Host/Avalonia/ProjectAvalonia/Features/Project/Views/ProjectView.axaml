<UserControl
    x:Class="ProjectAvalonia.Features.Project.Views.ProjectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ProjectAvalonia.Common.Controls;assembly=ProjectAvalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProjectAvalonia.Features.Project.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:project="clr-namespace:ProjectAvalonia.Features.Project.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="project:ProjectViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="35,1*">
        <DockPanel Grid.Row="0" Background="{DynamicResource SystemBaseLowColor}">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <Button
                    Width="42"
                    Height="28"
                    Margin="4,2"
                    Classes="function"
                    Command="{Binding OpenProjectCommand}"
                    ToolTip.Tip="Abrir">
                    <Button.Content>
                        <PathIcon Data="{StaticResource document_regular}" />
                    </Button.Content>
                </Button>
                <Button
                    Width="42"
                    Height="28"
                    Margin="4,2"
                    Classes="function"
                    Command="{Binding CreateProjectCommand}"
                    ToolTip.Tip="Novo">
                    <Button.Content>
                        <PathIcon Data="{StaticResource add_regular}" />
                    </Button.Content>
                </Button>

            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <ToggleButton
                    Width="40"
                    Height="36"
                    Classes="function"
                    IsChecked="{Binding projectExplorerViewModel.IsDocumentSolutionEnabled, Mode=TwoWay}"
                    ToolTip.Tip="Visualizar Solução">
                    <PathIcon Data="{StaticResource document_regular}" />
                    <ToggleButton.Flyout>
                        <controls:SolutionFlyout SolutionModel="{Binding projectExplorerViewModel.SolutionModel}" />
                    </ToggleButton.Flyout>
                </ToggleButton>
                <Button
                    x:Name="SaveSolutionButton"
                    Width="40"
                    Height="36"
                    Margin="4,2"
                    Classes="function"
                    Command="{Binding projectExplorerViewModel.SaveSolutionCommand}"
                    ToolTip.Tip="Sincronizar Solução">
                    <PathIcon Data="{StaticResource save_regular}" />
                </Button>

                <Button
                    x:Name="AppPrintButton"
                    Width="40"
                    Height="36"
                    Margin="4,2"
                    Classes="function"
                    Command="{Binding projectExplorerViewModel.PrintProjectCommand}"
                    ToolTip.Tip="Imprimir">
                    <PathIcon Data="{StaticResource printer_regular}" />
                </Button>

            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <local:ProjectExplorerView
                Width="350"
                VerticalAlignment="Stretch"
                DataContext="{Binding projectExplorerViewModel}"
                DockPanel.Dock="Right" />
            <local:ProjectEditingView />
        </DockPanel>

    </Grid>
</UserControl>
