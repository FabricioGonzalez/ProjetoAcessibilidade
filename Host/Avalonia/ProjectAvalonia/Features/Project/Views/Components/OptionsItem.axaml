<UserControl
    x:Class="ProjectAvalonia.Features.Project.Views.Components.OptionsItem"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appModels="clr-namespace:ProjectAvalonia.Features.Project.States.FormItemState"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectAvalonia.Features.Project.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ItemsControl Items="{Binding Options}">
        <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="appModels:OptionsItemState">
                <local:OptionItem IsChecked="{Binding IsChecked, Mode=TwoWay}" Value="{Binding Value}" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>