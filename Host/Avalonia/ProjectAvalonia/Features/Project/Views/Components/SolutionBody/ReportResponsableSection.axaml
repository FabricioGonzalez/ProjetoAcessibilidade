<UserControl
	x:Class="ProjectAvalonia.Features.Project.Views.Components.SolutionBody.ReportResponsableSection"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Padding="8"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid ColumnDefinitions="* * * 14 * * *" RowDefinitions="* * * * * * ">
		<StackPanel
			Grid.Column="0"
			Grid.ColumnSpan="3"
			Spacing="4">
			<SelectableTextBlock
				Classes="header_title"
				Focusable="False"
				Text="Responsável pela Vistoria" />
			<TextBox Text="{Binding Report.ManagerInfo.Responsavel}" />
		</StackPanel>
		<StackPanel
			Grid.Column="4"
			Grid.ColumnSpan="3"
			Spacing="4">
			<SelectableTextBlock
				Classes="header_title"
				Focusable="False"
				Text="Data do Relatório" />
			<CalendarDatePicker
				HorizontalAlignment="Stretch"
				Background="{DynamicResource TextControlBackground}"
				BorderBrush="Transparent"
				BorderThickness="0"
				IsTodayHighlighted="True"
				SelectedDate="{Binding Report.Data}" />
		</StackPanel>
	</Grid>
</UserControl>
