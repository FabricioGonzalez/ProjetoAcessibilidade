<UserControl
    x:Class="ProjectAvalonia.Features.Project.Views.ProjectExplorerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="clr-namespace:ProjectAvalonia.Features.Project.Views.Components"
    xmlns:interfaces="clr-namespace:ProjectAvalonia.Presentation.Interfaces;assembly=ProjectAvalonia.Presentation"
    xmlns:designTimeViewModels="clr-namespace:ProjectAvalonia.DesignTimeViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="interfaces:IProjectExplorerViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <designTimeViewModels:DesignTimeProjectExplorerViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="42,42,42,1*" Background="{DynamicResource AcrylicTrimBackground}">
        <TextBlock
            Grid.Row="0"
            Margin="4,0"
            Text="Explorador de Solução" />
        <StackPanel Grid.Row="1">
            <Button VerticalAlignment="Center" Height="32" Width="32" ToolTip.Tip="Criar pasta"
                    Command="{Binding CreateFolderCommand}">
                <PathIcon Data="{StaticResource add_regular}" />
            </Button>
        </StackPanel>
        <TextBox
            Grid.Row="2"
            Margin="4,0"
            Watermark="Pesquisar itens"
            UseFloatingWatermark="True">
            <TextBox.InnerRightContent>
                <PathIcon Data="{StaticResource search_regular}" />
            </TextBox.InnerRightContent>
        </TextBox>
        <TreeView
            Grid.Row="3"
            Margin="4,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Items="{Binding Items,Mode=TwoWay}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}" Padding="0">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <components:ItemGroupView DataContext="{Binding}" />
                </DataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Command="{Binding CreateFolderCommand}"
                        Header="Adicionar Item" />
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
    </Grid>
</UserControl>