<UserControl
    x:Class="ProjectAvalonia.Features.Project.Views.ProjectExplorerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:ProjectAvalonia.Behaviors;assembly=ProjectAvalonia"
    xmlns:controls="clr-namespace:ProjectAvalonia.Common.Controls;assembly=ProjectAvalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:ProjectAvalonia.Features.Project.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:ProjectExplorerViewModel"
    mc:Ignorable="d">
    <Grid Name="ExplorerRoot" RowDefinitions="35,35,1*">
        <TextBlock Text="Explorador de Solução" />
        <TextBox />
        <TreeView
            x:Name="explorerTreeView"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            CornerRadius="8"
            Items="{Binding SolutionModel.ItemGroups}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Items="{Binding Items}">
                        <TreeViewItem.Header>
                            <controls:EditableTextBlock InEditMode="{Binding InEditMode}" Text="{Binding Name}" />
                        </TreeViewItem.Header>
                        <TreeViewItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Command="{Binding $parent[UserControl].DataContext.SolutionModel.AddProjectItemCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Adicionar Item" />
                                <MenuItem
                                    Command="{Binding $parent[UserControl].DataContext.SolutionModel.ExcludeFolderCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Excluir Pasta" />
                            </ContextMenu>
                        </TreeViewItem.ContextMenu>
                        <TreeViewItem.ItemTemplate>
                            <DataTemplate>
                                <Panel>
                                    <i:Interaction.Behaviors>
                                        <behaviors:ExecuteCommandOnDoubleTappedBehavior Command="{Binding $parent[UserControl].DataContext.CreateItemCommand}" CommandParameter="{Binding}" />
                                    </i:Interaction.Behaviors>
                                    <controls:EditableTextBlock InEditMode="{Binding InEditMode}" Text="{Binding Name}" />
                                    <Panel.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Command="{Binding $parent[UserControl].DataContext.SolutionModel.ExcludeFileCommand}"
                                                CommandParameter="{Binding}"
                                                Header="Excluir" />
                                            <MenuItem
                                                Command="{Binding $parent[UserControl].DataContext.SolutionModel.RenameFileCommand}"
                                                CommandParameter="{Binding}"
                                                Header="Renomear" />
                                        </ContextMenu>
                                    </Panel.ContextMenu>
                                </Panel>
                            </DataTemplate>
                        </TreeViewItem.ItemTemplate>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ContextMenu>
                <MenuItem
                    Command="{Binding $parent[UserControl].DataContext.SolutionModel.AddProjectItemCommand}"
                    CommandParameter="{Binding}"
                    Header="Adicionar Item" />
            </TreeView.ContextMenu>
        </TreeView>
    </Grid>
</UserControl>
