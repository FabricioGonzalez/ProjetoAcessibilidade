<Window
    x:Class="ProjectAvalonia.Project.Components.ProjectExplorer.Dialogs.AddItemWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fileTemplates="clr-namespace:App.Core.Entities.Solution.Explorer;assembly=App.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MusicStoreWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource SystemAltMediumColor}"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Panel>
        <Grid
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            RowDefinitions="1*,64">
            <ListBox
                x:Name="itemList"
                Grid.Row="0"
                Items="{Binding Items, Mode=OneWay}"
                SelectedItem="{Binding Item, Mode=TwoWay}"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="fileTemplates:ExplorerItem">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button
                x:Name="ConfirmResultAddItemDialog"
                Name="ConfirmResultAddItemDialog"
                Grid.Row="1"
                Width="130"
                Height="35"
                Margin="8,0"
                HorizontalAlignment="Right"
                Command="{Binding SelectItemToCreateCommand}"
                Content="Confirmar" />
            <Button
                x:Name="ExitAddItemDialog"
                Name="ExitAddItemDialog"
                Grid.Row="1"
                Width="130"
                Height="35"
                Margin="8,0"
                HorizontalAlignment="Left"
                Content="Voltar" />
        </Grid>
    </Panel>
</Window>
