<UserControl
    x:Class="ProjectAvalonia.Features.TemplateEdit.Views.ItemValidationView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ProjectAvalonia.Common.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interfaces="clr-namespace:ProjectAvalonia.Presentation.Interfaces;assembly=ProjectAvalonia.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ProjectAvalonia.Features.TemplateEdit.ViewModels;assembly=ProjectAvalonia"
    Padding="4,8"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="interfaces:IItemValidationRulesViewModel"
    Background="{DynamicResource SystemBaseLowColor}"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:ItemValidationViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="0.2* 0.5* 0.3* 0.2*" RowDefinitions="48 1*">
        <Label
            Grid.Column="0"
            Content="Validation Rules"
            FontWeight="DemiBold" />
        <controls:IconButton
            Grid.Column="3"
            Width="18"
            Height="18"
            HorizontalAlignment="Right"
            Icon="{StaticResource add_regular}"
            IconSize="16" />
        <ScrollViewer
            Grid.Row="1"
            Grid.ColumnSpan="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch">
            <ItemsControl
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Items="{Binding ValidationRules}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl Items="{Binding Rules}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid RowDefinitions="48 1*">
                                        <Border
                                            BorderBrush="{DynamicResource AppElevationBrush}"
                                            BorderThickness="0.3"
                                            BoxShadow="{DynamicResource AppElevationShadow}"
                                            CornerRadius="4">
                                            <Grid ColumnDefinitions="0.2* 0.2* 0.4*">
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Margin="4,0"
                                                    VerticalAlignment="Center"
                                                    Content="Operation"
                                                    FontWeight="DemiBold" />
                                                <ComboBox
                                                    Grid.Column="2"
                                                    Height="24"
                                                    Margin="4,0"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    SelectedItem="{Binding Operation}" />
                                            </Grid>
                                        </Border>

                                        <Border
                                            Grid.Row="1"
                                            BorderBrush="{DynamicResource AppElevationBrush}"
                                            BorderThickness="0.3"
                                            BoxShadow="{DynamicResource AppElevationShadow}"
                                            CornerRadius="4">
                                            <Grid RowDefinitions="40 8 1.2*">
                                                <Label Content="Conditions" FontWeight="DemiBold" />
                                                <ItemsControl
                                                    Grid.Row="2"
                                                    CornerRadius="4"
                                                    Items="{Binding Conditions}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid RowDefinitions="40 8 1.2*">

                                                                <Grid ColumnDefinitions="0.2* 16 0.15* 16 0.4*">
                                                                    <Label
                                                                        Grid.Row="0"
                                                                        Grid.Column="0"
                                                                        Content="When"
                                                                        FontWeight="DemiBold" />
                                                                    <ComboBox
                                                                        Grid.Row="0"
                                                                        Grid.Column="2"
                                                                        Height="24"
                                                                        Padding="4,0"
                                                                        HorizontalAlignment="Stretch"
                                                                        VerticalAlignment="Stretch"
                                                                        SelectedItem="{Binding Type}" />
                                                                    <TextBox
                                                                        Grid.Row="0"
                                                                        Grid.Column="4"
                                                                        Height="24"
                                                                        Padding="4,0"
                                                                        Text="{Binding CheckingValue}" />
                                                                </Grid>

                                                                <Grid
                                                                    Grid.Row="2"
                                                                    ColumnDefinitions="64 1*"
                                                                    RowDefinitions="40 1*">
                                                                    <Label
                                                                        Grid.Row="0"
                                                                        Grid.Column="0"
                                                                        VerticalAlignment="Center"
                                                                        Content="Then"
                                                                        FontWeight="DemiBold" />
                                                                    <ItemsControl
                                                                        Grid.RowSpan="2"
                                                                        Grid.Column="1"
                                                                        Items="{Binding Result}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <TextBox Margin="0,4,0,0" Text="{Binding}" />
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>