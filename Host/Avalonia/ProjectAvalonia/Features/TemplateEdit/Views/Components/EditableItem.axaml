<UserControl
    x:Class="ProjectAvalonia.Features.TemplateEdit.Views.Components.EditableItem"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ProjectAvalonia.Common.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:designTimeViewModels="clr-namespace:ProjectAvalonia.DesignTimeViewModels"
    xmlns:interfaces="clr-namespace:ProjectAvalonia.Presentation.Interfaces;assembly=ProjectAvalonia.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="25"
    d:DesignWidth="200"
    x:CompileBindings="True"
    x:DataType="interfaces:IEditableItemViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <designTimeViewModels:DesignTimeEditableItemViewModel />
    </Design.DataContext>
    <controls:EditableTextBlock
        HorizontalAlignment="Stretch"
        Command="{Binding CommitItemCommand}"
        InEditMode="{Binding InEditMode, Mode=TwoWay}"
        Text="{Binding TemplateName, Mode=TwoWay}">

        <!--<controls:EditableTextBlock.ContextFlyout>
            <MenuFlyout >
                <MenuItem
                    Command="{Binding ExcludeItemCommand}"
                    Header="Excluir" />
            </MenuFlyout>
        </controls:EditableTextBlock.ContextFlyout>-->
        <controls:EditableTextBlock.Actions>
            <MenuItem Command="{Binding ExcludeItemCommand}" Header="Excluir" />
        </controls:EditableTextBlock.Actions>
    </controls:EditableTextBlock>
</UserControl>