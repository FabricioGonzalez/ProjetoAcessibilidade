<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProjectAvalonia.Features.TemplateEdit.Views.Components.ComboEditBox">
    <Grid RowDefinitions="0.2*,0.8*">
        <Grid ColumnDefinitions="0.8*,0.2*">
            <TextBox Watermark="Topico" UseFloatingWatermark="True" Text="{TemplateBinding Topic}" />
            <ComboBox Grid.Column="1" SelectedItem="{TemplateBinding SelectedValue}" />
        </Grid>
    </Grid>
</UserControl>