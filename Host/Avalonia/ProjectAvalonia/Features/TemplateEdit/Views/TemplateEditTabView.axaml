                                    <ComboBox.Items>
                                        <enuns:AppFormDataType>Texto</enuns:AppFormDataType>
                                        <enuns:AppFormDataType>Checkbox</enuns:AppFormDataType>
                                    </ComboBox.Items>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate DataType="enuns:AppFormDataType">
                                            <TextBlock Text="{Binding}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                            <controls:ReportContainer Content="{Binding Body, Mode=OneWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

