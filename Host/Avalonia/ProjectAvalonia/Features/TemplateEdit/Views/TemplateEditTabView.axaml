                                        </models:TypeTemplate>
                                    </components:ComboEditBox.Items>-->
                                </components:ComboEditBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </Border>
