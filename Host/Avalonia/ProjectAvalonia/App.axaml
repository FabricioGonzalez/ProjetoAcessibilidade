<Application
    x:Class="ProjectAvalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectAvalonia">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark" />
        <StyleInclude Source="/Styles/ProjectModuleStyles.axaml" />
        <StyleInclude Source="avares://ProjectAvalonia/Controls/EditableTextBlock.xaml" />
        <StyleInclude Source="/Styles/MainWindowStyles.axaml" />
        <StyleInclude Source="/Styles/ProjectEditingTabStyles.axaml" />
    </Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/avalonia-logo.ico" ToolTipText="Avalonia Tray Icon ToolTip">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Settings">
							<NativeMenu>
								<NativeMenuItem Header="Option 1" ToggleType="Radio" IsChecked="True" />
								<NativeMenuItem Header="Option 2" ToggleType="Radio" IsChecked="True"/>
								<NativeMenuItemSeparator />
								<NativeMenuItem Header="Option 3" ToggleType="CheckBox" IsChecked="True" />
								<NativeMenuItem Icon="/Assets/avalonia-logo.ico" Header="Restore Defaults" />
								<NativeMenuItem Header="Disabled option" IsEnabled="False" />
							</NativeMenu>
						</NativeMenuItem>
						<NativeMenuItem Header="Exit" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>
