<Application
    x:Class="ProjectAvalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:local="using:ProjectAvalonia"
    xmlns:notification="clr-namespace:Avalonia.Notification;assembly=Notification.Avalonia">

    <Application.Resources>
        <x:Double x:Key="AppMaterialOpacity">0.55</x:Double>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Dark" />
        <StyleInclude Source="avares://ProjectAvalonia/Controls/EditableTextBlock.xaml" />
        <StyleInclude Source="avares://ProjectAvalonia/Styles/Window/WindowStyle.axaml" />
        <StyleInclude Source="avares://ProjectAvalonia/Styles/SolutionExplorer/SolutionExplorerFlyoutStyle.axaml" />
        <StyleInclude Source="/Styles/ProjectEditingTabStyles.axaml" />
        <StyleInclude Source="/Styles/Components/Shadows.axaml" />
        <StyleInclude Source="/Styles/HorizontalScroller.axaml" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml" />
    </Application.Styles>
</Application>
