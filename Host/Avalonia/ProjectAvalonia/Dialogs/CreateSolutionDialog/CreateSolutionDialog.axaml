<Window
    x:Class="ProjectAvalonia.Dialogs.CreateSolutionDialog.CreateSolutionDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assist="clr-namespace:Neumorphism.Avalonia.Styles.Assists;assembly=Neumorphism.Avalonia"
    xmlns:assists="clr-namespace:Neumorphism.Avalonia.Styles.Assists;assembly=Neumorphism.Avalonia"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:material="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="clr-namespace:Neumorphism.Avalonia.Styles;assembly=Neumorphism.Avalonia"
    xmlns:vm="clr-namespace:Project.Core.ViewModels.Dialogs;assembly=Project.Core"
    Title="CreateSolutionDialog"
    Width="750"
    Height="800"
    Padding="0"
    d:DesignHeight="750"
    d:DesignWidth="800"
    Background="Transparent"
    CanResize="False"
    ExtendClientAreaToDecorationsHint="True"
    HasSystemDecorations="True"
    ShowInTaskbar="True"
    SystemDecorations="BorderOnly"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Panel>
        <!--<ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="{DynamicResource AppMaterialOpacity}"
                    TintColor="{DynamicResource ThemeBackgroundBrush}"
                    TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>-->
        <Grid Margin="0,32,0,0" RowDefinitions="1*,64,48,48,1*">

            <Grid
                Grid.Row="0"
                Margin="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                ColumnDefinitions="0.7*,1*"
                RowDefinitions="0.4*,0.4*,0.4*">

                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="280"
                    assists:TextFieldAssist.Label="Nome da Empresa"
                    Text="{Binding SolutionModel.ReportData.NomeEmpresa}"
                    UseFloatingWatermark="True" />

                <Grid
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    ColumnDefinitions="1*,0.7*">
                    <DatePicker
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        DayVisible="True"
                        Header="Data do Relatório"
                        MonthVisible="True"
                        SelectedDate="{Binding SolutionModel.ReportData.Data}"
                        YearVisible="True" />

                    <ComboBox
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Items="{Binding SolutionModel.UFList}"
                        PlaceholderText="UF"
                        SelectedItem="{Binding SolutionModel.ReportData.UF}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Code}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>


                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="290"
                    assists:TextFieldAssist.Label="Responsável pelo Projeto"
                    Text="{Binding SolutionModel.ReportData.Responsavel}"
                    UseFloatingWatermark="True" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="425"
                    assists:TextFieldAssist.Label="Endereço da Empresa"
                    Text="{Binding SolutionModel.ReportData.Endereco}"
                    UseFloatingWatermark="True" />

                <TextBox
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="290"
                    assists:TextFieldAssist.Label="Email do Responsável"
                    Text="{Binding SolutionModel.ReportData.Email}"
                    UseFloatingWatermark="True" />

                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="425"
                    assists:TextFieldAssist.Label="Telefone do Responsável"
                    Classes="Outline"
                    Text="{Binding SolutionModel.ReportData.Telefone}"
                    UseFloatingWatermark="True" />
            </Grid>

            <TextBox
                Grid.Row="1"
                Width="740"
                Margin="4,0"
                assists:TextFieldAssist.Label="Nome da Solução"
                Text="{Binding SolutionModel.FileName}"
                UseFloatingWatermark="True" />

            <TextBox
                Grid.Row="2"
                Grid.Column="0"
                Width="740"
                Margin="4,0"
                Classes="Header"
                IsEnabled="True"
                IsReadOnly="True"
                Text="{Binding SolutionModel.FilePath}"
                UseFloatingWatermark="True"
                Watermark="Local da Solução">
                <TextBox.InnerRightContent>
                    <Button
                        Width="48"
                        Height="38"
                        Margin="10,0,10,0"
                        Classes="no-material"
                        Command="{Binding SolutionModel.ChooseSolutionPath}"
                        Cursor="Arrow">
                        <avalonia:MaterialIcon
                            Width="24"
                            Height="24"
                            Kind="Folder" />
                    </Button>
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Row="3"
                Grid.Column="0"
                Width="740"
                HorizontalAlignment="Stretch"
                Classes="Header"
                IsEnabled="True"
                IsReadOnly="True"
                Text="{Binding SolutionModel.ReportData.LogoPath}"
                UseFloatingWatermark="True"
                Watermark="Local da Logo da Empresa">
                <TextBox.InnerRightContent>
                    <Button
                        Width="48"
                        Height="38"
                        Margin="10,0,10,0"
                        Classes="no-material"
                        Command="{Binding SolutionModel.ChooseSolutionPath}"
                        Cursor="Arrow">
                        <avalonia:MaterialIcon
                            Width="24"
                            Height="24"
                            Kind="Folder" />
                    </Button>
                </TextBox.InnerRightContent>
            </TextBox>

            <Panel
                Grid.Row="4"
                Margin="8"
                Background="Transparent">
                <Button
                    Name="CloseButton"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Left"
                    Command="{Binding CloseDialogCommand}"
                    Content="Fechar" />
                <Button
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Right"
                    Command="{Binding CreateSolution}"
                    Content="Criar" />
            </Panel>
        </Grid>
    </Panel>
</Window>
