<Window
    x:Class="ProjectAvalonia.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assists="clr-namespace:Neumorphism.Avalonia.Styles.Assists;assembly=Neumorphism.Avalonia"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:controls="clr-namespace:Avalonia.Notification.Controls;assembly=Notification.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectAvalonia;assembly=ProjectAvalonia"
    xmlns:material="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:styles="clr-namespace:Neumorphism.Avalonia.Styles;assembly=Neumorphism.Avalonia"
    xmlns:views="clr-namespace:ProjectAvalonia.Views;assembly=ProjectAvalonia"
    xmlns:vm="clr-namespace:Project.Core.ViewModels.ViewModels;assembly=Project.Core"
    Name="mainWindow"
    Title="ProjectAvalonia"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Classes="Window"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">
    <Grid Name="AppContainer" RowDefinitions="auto,1*,28">
        <controls:NotificationMessageContainer
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Manager="{Binding NotificationMessageManagerService.Manager}" />
        <Panel
            Grid.Row="0"
            Width="{Binding #AppContainer.Width}"
            HorizontalAlignment="Stretch"
            Background="Transparent">
            <Button Margin="8,0" HorizontalAlignment="Left">
                <material:MaterialIcon Kind="ArrowLeft" />
            </Button>
            <Menu
                Height="30"
                Margin="48,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                Classes="mainMenu">
                <Menu.Items>
                    <MenuItem
                        Height="30"
                        Background="Transparent"
                        Header="Arquivos">
                        <MenuItem.Items>
                            <MenuItem
                                Height="30"
                                Margin="4,0"
                                Background="Transparent"
                                Command="{Binding OpenProjectCommand}"
                                Header="Abrir" />
                            <MenuItem
                                Height="30"
                                Margin="4,0"
                                Background="Transparent"
                                Command="{Binding CreateProjectCommand}"
                                Header="Novo" />
                            <Separator Background="Transparent" />
                            <MenuItem
                                Name="CloseAppMenuItem"
                                Height="30"
                                Margin="4,0"
                                Background="Transparent"
                                Command="{Binding CloseAppCommand}"
                                Header="Sair" />
                        </MenuItem.Items>
                    </MenuItem>
                    <MenuItem
                        Height="30"
                        Background="Transparent"
                        Header="Templates">
                        <MenuItem.Items>
                            <MenuItem
                                Height="30"
                                Margin="4,0"
                                Background="Transparent"
                                Command="{Binding GoToTemplateEditing}"
                                Header="Edição de Templates" />
                            <MenuItem
                                Height="30"
                                Margin="4,0"
                                Background="Transparent"
                                Command="{Binding GoToRulesEditing}"
                                Header="Regras de Validação" />
                        </MenuItem.Items>
                    </MenuItem>
                    <MenuItem
                        Height="30"
                        Background="Transparent"
                        Header="Sistema">
                        <MenuItem.Items>
                            <MenuItem
                                Height="30"
                                Margin="4,0"
                                Background="Transparent"
                                Command="{Binding GoToSetting}"
                                Header="Configurações" />
                        </MenuItem.Items>
                    </MenuItem>
                </Menu.Items>
            </Menu>
            <ToggleButton
                Name="toggleSwitchTheme"
                Margin="8,0"
                HorizontalAlignment="Right"
                Command="{Binding #mainWindow.SwitchUITheme}"
                CommandParameter="{Binding ElementName=toggleSwitchTheme}"
                ToolTip.Tip="Tema">
                <Panel>
                    <material:MaterialIcon Classes="tbunchecked" Kind="Lights" />
                    <material:MaterialIcon
                        Width="14"
                        Height="14"
                        Margin="14,14,0,0"
                        Classes="tbchecked"
                        Kind="NightLight" />
                </Panel>
            </ToggleButton>
            <!--<ToggleSwitch
                Name="toggleSwitchTheme"
                HorizontalAlignment="Right"
                Command="{Binding #mainWindow.SwitchUITheme}"
                CommandParameter="{Binding ElementName=toggleSwitchTheme}"
                OffContent="Light theme"
                OnContent="Dark theme" />-->
        </Panel>

        <rxui:RoutedViewHost
            Grid.Row="1"
            Padding="4"
            Router="{Binding Router}">
            <rxui:RoutedViewHost.DefaultContent>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <TextBlock Classes="h1" Text="Sample Avalonia Application" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Loading..."
                        TextAlignment="Center" />
                </StackPanel>
            </rxui:RoutedViewHost.DefaultContent>
        </rxui:RoutedViewHost>

        <Grid
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{DynamicResource SystemBaseLowColor}">
            <Button
                ToolTip.HorizontalOffset="8"
                ToolTip.Placement="Top"
                ToolTip.Tip="Notifications"
                ToolTip.VerticalOffset="8">
                <material:MaterialIcon Kind="Message" />
            </Button>
        </Grid>

    </Grid>
</Window>
