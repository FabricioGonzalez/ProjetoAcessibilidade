<Window
    x:Class="ProjectAvalonia.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectAvalonia;assembly=ProjectAvalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:views="clr-namespace:ProjectAvalonia.Views;assembly=ProjectAvalonia"
    xmlns:vm="clr-namespace:Project.Core.ViewModels.ViewModels;assembly=Project.Core"
    Title="ProjectAvalonia"
    Padding="0"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/avalonia-logo.ico"
    TransparencyLevelHint="AcrylicBlur"
    mc:Ignorable="d">
    <StackPanel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.65"
                    TintColor="Black"
                    TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Panel Margin="0,32,0,0">
            <Menu
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Classes="mainMenu">
                <Menu.Items>
                    <MenuItem Header="Arquivos">
                        <MenuItem.Items>
                            <MenuItem
                                Margin="4,0"
                                Command="{Binding OpenProjectCommand}"
                                Header="Abrir" />
                            <MenuItem
                                Margin="4,0"
                                Command="{Binding CreateProjectCommand}"
                                Header="Novo" />
                            <Separator />
                            <MenuItem Margin="4,0" Header="Sair" />
                        </MenuItem.Items>
                    </MenuItem>
                    <MenuItem CornerRadius="8" Header="Templates">
                        <MenuItem.Items>
                            <MenuItem Margin="4,0" Header="Edição de Templates" />
                            <MenuItem Margin="4,0" Header="Regras de Validação" />
                        </MenuItem.Items>
                    </MenuItem>
                </Menu.Items>
            </Menu>
        </Panel>
        <rxui:RoutedViewHost
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Router="{Binding Router}">
            <rxui:RoutedViewHost.DefaultContent>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Classes="h1" Text="Sample Avalonia Application" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Loading..."
                        TextAlignment="Center" />
                </StackPanel>
            </rxui:RoutedViewHost.DefaultContent>
        </rxui:RoutedViewHost>
    </StackPanel>
</Window>
