<UserControl
	x:Class="AppWinui.AppCode.Project.UIComponents.TreeView.FolderTreeViewItemTemplate"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<TreeViewItem
		AllowDrop="True"
		AutomationProperties.Name="{x:Bind Item.Name,Mode=OneWay}"
		IsExpanded="True"
		ItemsSource="{x:Bind Item.Children,Mode=OneWay}">
        <TreeViewItem.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="Renomear" />
                <MenuFlyoutItem Text="Excluir" />
                <MenuFlyoutItem Text="Adicionar Item" />
                <MenuFlyoutItem Text="Adicionar Pasta" />
            </MenuFlyout>
        </TreeViewItem.ContextFlyout>
        <StackPanel Orientation="Horizontal">
			<FontIcon
				Width="20"
				Margin="0,0,10,0"
				FontFamily="{StaticResource SymbolThemeFontFamily}"
				Glyph="&#xED41;" />
            <TextBlock Text="{x:Bind Item.Name,Mode=OneWay}" />
		</StackPanel>
	</TreeViewItem>
</UserControl>
