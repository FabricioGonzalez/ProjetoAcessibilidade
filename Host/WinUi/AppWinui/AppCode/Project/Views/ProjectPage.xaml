			</Grid.RowDefinitions>
			<Border Grid.Row="0" Grid.ColumnSpan="2">
				<!--<TextBlock Text="{x:Bind ViewModel.ReportData.SolutionName, Mode=TwoWay}" TextAlignment="Center" />-->
