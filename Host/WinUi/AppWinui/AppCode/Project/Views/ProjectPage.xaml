				Padding="4"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top"
				HorizontalContentAlignment="Stretch"
				VerticalContentAlignment="Stretch"
				CornerRadius="4">
				<Expander.Header>
					Dados do Projeto
				</Expander.Header>
				<ScrollViewer Padding="4,0" CornerRadius="4">
