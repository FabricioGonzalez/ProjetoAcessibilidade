<UserControl
	x:Class="AppWinui.AppCode.AppUtils.UIComponents.ConditionalTextEditingBlock"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:behaviors="using:AppWinui.AppCode.AppUtils.Behaviors"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:i="using:Microsoft.Xaml.Interactivity"
	xmlns:local="using:AppWinui.AppCode.AppUtils.UIComponents"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<i:Interaction.Behaviors>
		<behaviors:ConditionalRenderingBehavior ConditionResult="{x:Bind IsEditing, Mode=OneWay}">
			<behaviors:ConditionalRenderingBehavior.OnSuccessContent>
				<TextBox KeyDown="TextBox_KeyDown" />
			</behaviors:ConditionalRenderingBehavior.OnSuccessContent>
			<behaviors:ConditionalRenderingBehavior.OnFailedContent>
				<TextBlock Text="{x:Bind EditableText, Mode=OneWay}" />
			</behaviors:ConditionalRenderingBehavior.OnFailedContent>
		</behaviors:ConditionalRenderingBehavior>
	</i:Interaction.Behaviors>
</UserControl>
